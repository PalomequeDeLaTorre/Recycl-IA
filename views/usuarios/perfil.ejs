    <h1>Acceso a la Cámara Trasera</h1>
    <button onclick="startCamera()">Iniciar Cámara Trasera</button>
    <video id="camera" autoplay playsinline></video>

    <script>
        async function startCamera() {
            try {
                const cameras = await navigator.mediaDevices.enumerateDevices();
                const videoDevices = cameras.filter(device => device.kind === 'videoinput');
                let selectedDevice;

                console.log('Video Devices:', videoDevices);

                if (videoDevices.length > 0) {
                    // Preferir la cámara trasera si está disponible
                    selectedDevice = videoDevices.find(device => device.label.includes('back')) || videoDevices[0];

                    console.log('Selected Device:', selectedDevice);

                } else {
                    console.error('No se encontraron cámaras disponibles.');
                    return;
                }

                const stream = await navigator.mediaDevices.getUserMedia({ video: { deviceId: selectedDevice.deviceId } });

                // Obtener el elemento de video y establecer el flujo de la cámara
                const videoElement = document.getElementById('camera');
                videoElement.srcObject = stream;
            } catch (error) {
                console.error('Error al acceder a la cámara:', error);
            }
        }
    </script>

</section>

