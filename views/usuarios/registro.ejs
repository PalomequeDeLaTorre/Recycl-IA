<div class="container mt-5">
  <form action="/register" method="post" enctype="multipart/form-data">
    <div class="text-center">
        <img src="/Logo.png" alt="Imagen" style="max-width: 200px; height: auto;">
      </div>
      <div class="card">
          <div class="card-header">
              <h1>Registro</h1>
          </div> 
